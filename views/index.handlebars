<h1> Eat-Da-Veggi_Burger!</h1>
<ul>
  {{#each burgers}}
  {{#unless this.devoured}}
  <li>
  <p>
    {{this.Burger_name}}
    <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
        <input type="hidden" name="devoured" value="true">
        <button type="submit" id ="dev-Btn"> DEVOUR IT! </button>
    </form>
    </p>
  </li>
  {{/unless}}
  {{/each}}
</ul>
<ul>
{{#each burgers}}
{{#if this.devoured}}
<li>
  <p>
  {{this.Burger_name}}
  </p>
</li>
{{/if}}
{{/each}}
</ul>
<form action="burgers/create" method='POST'>
 <textarea type="text" name="burgername" rows="3"> </textarea>
 <button type="submit">Add Burger!</button>
 </form>
